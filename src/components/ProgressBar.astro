<div id="progress-container" class="fixed top-0 left-0 w-full h-1 z-[100] pointer-events-none">
  <div id="progress-bar" class="h-full bg-gradient-to-r from-orange-500 via-yellow-500 to-orange-600 w-0 transition-all duration-100 ease-out shadow-[0_0_10px_rgba(255,165,0,0.5)]"></div>
</div>

<script>
  function updateProgress() {
    const winScroll = document.body.scrollTop || document.documentElement.scrollTop;
    const height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
    const scrolled = (winScroll / height) * 100;
    const progressBar = document.getElementById("progress-bar");
    if (progressBar) {
      progressBar.style.width = scrolled + "%";
    }
  }

  window.addEventListener("scroll", updateProgress);
  
  // Update on page load/navigation
  document.addEventListener('astro:page-load', () => {
    updateProgress();
    window.addEventListener("scroll", updateProgress);
  });
</script>