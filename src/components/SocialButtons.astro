---
// components/SocialButtons.astro
import { Icon } from "astro-iconify";

const links = [
  {
    name: "GitHub",
    url: "https://github.com/Geovanni-Gonzalez",
    icon: "mdi:github",
  },
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/geovanni-gonz√°lez-aguilar",
    icon: "mdi:linkedin",
  },
];
---

<div class="flex gap-4">
  {
    links.map((link) => (
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-2 px-4 py-2 border border-text text-text rounded-full hover:bg-text hover:text-bg transition-colors"
      >
        <Icon name={link.icon} class="w-5 h-5" />
        <span>{link.name}</span>
      </a>
    ))
  }
</div>
