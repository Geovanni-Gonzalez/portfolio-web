---
import Icon from 'astro-iconify';
import { getLangFromUrl, useTranslations } from '../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-gradient-to-t from-zinc-900 via-zinc-800 to-zinc-900 text-zinc-300 py-12 mt-24 shadow-inner">
  <div class="max-w-6xl mx-auto px-6 flex flex-col md:flex-row justify-between items-center gap-10">
    <!-- Logo y nombre -->
    <div class="flex items-center gap-3 mb-6 md:mb-0">
      <Icon name="mdi:star-four-points" class="w-8 h-8 text-cyan-400 drop-shadow" />
      <span class="text-2xl font-extrabold tracking-wider text-white">Geovanni</span>
    </div>

    <!-- Enlaces rápidos -->
    <nav class="flex flex-wrap gap-8 text-base font-medium">
      <a href="#home" class="hover:text-cyan-400 transition-colors duration-200">{t('nav.home')}</a>
      <a href="#about" class="hover:text-cyan-400 transition-colors duration-200">{t('nav.aboutMe')}</a>
      <a href="#skills" class="hover:text-cyan-400 transition-colors duration-200">{t('nav.skills')}</a>
      <a href="#projects" class="hover:text-cyan-400 transition-colors duration-200">{t('nav.projects')}</a>
      <a href="#contact" class="hover:text-cyan-400 transition-colors duration-200">{t('nav.contact')}</a>
    </nav>

    <!-- Redes sociales -->
    <div class="flex gap-5">
      <a href="https://github.com/Geovanni-Gonzalez" target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="rounded-full bg-zinc-800 hover:bg-cyan-400 hover:text-white transition-colors duration-200 p-2 shadow-lg border border-zinc-700 hover:border-cyan-400">
        <Icon name="mdi:github" class="w-6 h-6" />
      </a>
      <a href="https://www.linkedin.com/in/geovanni-gonzález-aguilar" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="rounded-full bg-zinc-800 hover:bg-cyan-400 hover:text-white transition-colors duration-200 p-2 shadow-lg border border-zinc-700 hover:border-cyan-400">
        <Icon name="mdi:linkedin" class="w-6 h-6" />
      </a>
    </div>
  </div>

  <div class="border-t border-zinc-700 mt-10 pt-6">
    <p class="text-center text-zinc-500 text-xs select-none tracking-wide">
      © {new Date().getFullYear()} <span class="font-semibold text-zinc-400"> &mdash; {t('footer.copyright')}
    </p>
  </div>
</footer>
