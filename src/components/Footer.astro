---
import Icon from 'astro-iconify';
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-gradient-to-t from-zinc-900 via-zinc-800 to-zinc-900 text-zinc-300 py-8 md:py-12 mt-16 md:mt-24 shadow-inner">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 flex flex-col md:flex-row justify-between items-center gap-8 md:gap-10">

    <!-- Quick Links -->
    <nav class="flex flex-col sm:flex-row flex-wrap gap-4 sm:gap-8 text-base font-medium items-center">
      {[
        { href: "#home", label: t('nav.home') },
        { href: "#about", label: t('nav.aboutMe') },
        { href: "#skills", label: t('nav.skills') },
        { href: "#projects", label: t('nav.projects') },
        { href: "#contact", label: t('nav.contact') }
      ].map(link => (
        <a href={link.href} class="hover:text-orange-400 transition-colors duration-200">{link.label}</a>
      ))}
    </nav>

    <!-- Social Media -->
    <div class="flex gap-4 md:gap-5 mt-4 md:mt-0">
      <a
        href="https://github.com/Geovanni-Gonzalez"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub"
        class="rounded-full bg-zinc-800 hover:bg-orange-400 hover:text-white transition-colors duration-200 p-2 shadow-lg border border-zinc-700 hover:border-orange-400"
      >
        <Icon name="mdi:github" class="w-6 h-6" />
      </a>
      <a
        href="https://www.linkedin.com/in/geovanni-gonzález-aguilar"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="LinkedIn"
        class="rounded-full bg-zinc-800 hover:bg-orange-400 hover:text-white transition-colors duration-200 p-2 shadow-lg border border-zinc-700 hover:border-orange-400"
      >
        <Icon name="mdi:linkedin" class="w-6 h-6" />
      </a>
    </div>
  </div>

  <!-- Copyright -->
  <div class="border-t border-zinc-700 mt-8 md:mt-10 pt-4 md:pt-6">
    <p class="text-center text-zinc-500 text-xs select-none tracking-wide">
      © {new Date().getFullYear()} <span class="font-semibold text-zinc-400"> &mdash; {t('footer.copyright')}</span>
    </p>
  </div>
</footer>
