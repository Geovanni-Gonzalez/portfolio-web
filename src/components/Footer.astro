---
import Icon from "astro-iconify";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer
  class="bg-gradient-to-t from-bg via-muted/5 to-bg text-muted py-8 md:py-12 mt-16 md:mt-24 border-t border-text/5"
>
  <div
    class="max-w-6xl mx-auto px-4 sm:px-6 flex flex-col md:flex-row justify-between items-center gap-8 md:gap-10"
  >
    <!-- Quick Links -->
    <nav
      class="flex flex-col sm:flex-row flex-wrap gap-4 sm:gap-8 text-base font-medium items-center"
    >
      {
        [
          { href: "#home", label: t("nav.home") },
          { href: "#about", label: t("nav.aboutMe") },
          { href: "#skills", label: t("nav.skills") },
          { href: "#projects", label: t("nav.projects") },
          { href: "#contact", label: t("nav.contact") },
        ].map((link) => (
          <a
            href={link.href}
            class="hover:text-accent transition-colors duration-200"
          >
            {link.label}
          </a>
        ))
      }
    </nav>

    <!-- Social Media -->
    <div class="flex gap-4 md:gap-5 mt-4 md:mt-0">
      <a
        href="https://github.com/Geovanni-Gonzalez"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="GitHub"
        class="p-3 rounded-full bg-[var(--color-card-bg)] text-[var(--color-text)] border border-[var(--color-card-border)] shadow-md hover:scale-110 hover:border-orange-500 hover:text-orange-500 hover:shadow-orange-500/20 transition-all duration-300 backdrop-blur-sm group"
      >
        <Icon
          name="mdi:github"
          class="w-6 h-6 transition-transform group-hover:rotate-12"
        />
      </a>
      <a
        href="https://www.linkedin.com/in/geovanni-gonzález-aguilar"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="LinkedIn"
        class="p-3 rounded-full bg-[var(--color-card-bg)] text-[var(--color-text)] border border-[var(--color-card-border)] shadow-md hover:scale-110 hover:border-blue-500 hover:text-blue-500 hover:shadow-blue-500/20 transition-all duration-300 backdrop-blur-sm group"
      >
        <Icon
          name="mdi:linkedin"
          class="w-6 h-6 transition-transform group-hover:-rotate-12"
        />
      </a>
    </div>
  </div>

  <!-- Copyright -->
  <div class="border-t border-text/10 mt-8 md:mt-10 pt-4 md:pt-6">
    <p class="text-center text-muted/80 text-sm select-none tracking-wide">
      © {new Date().getFullYear()}
      <span class="font-semibold text-text">
        &mdash; {t("footer.copyright")}</span
      >
    </p>
  </div>
</footer>
