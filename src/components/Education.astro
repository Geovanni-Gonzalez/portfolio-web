---
import SectionTitle from './SectionTitle.astro';
import Certifications from './Certifications.astro';

const educations = [
  {
    degree: 'Ingeniería en Computación',
    institution: 'Tecnológico de Costa Rica',
    startDate: '2021',
    endDate: 'Actualidad',
    description: 'Formación integral en desarrollo de software, sistemas digitales, redes, y algoritmos, con énfasis en innovación tecnológica y proyectos prácticos.',
  },
  {
    degree: 'Bachillerato en Ciencias',
    institution: 'Colegio Técnico Profesional',
    startDate: '2017',
    endDate: '2020',
    description: 'Especialización en ciencias exactas, matemáticas y física, preparación para estudios superiores en ingeniería.',
  },
];
---

<section id="education" class="max-w-5xl mx-auto py-20 px-6 scroll-mt-20">
  <SectionTitle title="Educación & Certificaciones" />

  <!-- Educación -->
  <div class="mt-8 space-y-10">
    <h2 class="text-2xl font-semibold text-white mb-6 border-b border-indigo-600 pb-2">Formación Académica</h2>
    {educations.map(({ degree, institution, startDate, endDate, description }) => (
      <article class="bg-zinc-900/70 p-6 rounded-lg shadow-lg text-white hover:shadow-indigo-500 transition-shadow duration-300">
        <header class="flex justify-between items-center">
          <h3 class="text-xl font-semibold">{degree}</h3>
          <time class="text-sm text-zinc-400">{startDate} - {endDate}</time>
        </header>
        <p class="text-zinc-300 italic mt-1">{institution}</p>
        <p class="mt-4 text-zinc-200 leading-relaxed">{description}</p>
      </article>
    ))}
  </div>

  <!-- Insertar componente Certifications -->
  <Certifications />
</section>
