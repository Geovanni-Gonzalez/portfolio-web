---
// components/About.astro
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import { Icon } from "astro-iconify";
import { Image } from "astro:assets";
import profileImg from "../assets/profile.jpg";
import GradientTitle from "./GradientTitle.astro";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const cvFileSpanish = "/documents/CurriculumEstudiantil.pdf";
const cvFileEnglish = "/documents/StudentCurriculum.pdf";

const techStack = [
  { name: "React", icon: "logos:react" },
  { name: "Astro", icon: "logos:astro-icon" },
  { name: "Python", icon: "logos:python" },
  { name: "Tailwind", icon: "logos:tailwindcss-icon" },
  { name: "Java", icon: "logos:java" },
];
---

<section
  id="about"
  class="max-w-7xl mx-auto px-6 py-20"
  data-aos="fade-up"
  data-aos-duration="1000"
>
  <GradientTitle title={t("about.title")} />

  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-12 auto-rows-[minmax(180px,auto)]">
    <!-- 1. Profile Image Card (Vertical on mobile, square-ish on desktop) -->
    <div
      class="spotlight-card md:col-span-1 md:row-span-2 relative group overflow-hidden rounded-3xl h-80 md:h-auto shadow-lg"
      data-aos="fade-right"
      data-aos-delay="200"
    >
      <Image
        src={profileImg}
        alt="Geovanni González"
        class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
      />
      <div
        class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/20 to-transparent opacity-80 group-hover:opacity-60 transition-opacity duration-500"
      >
      </div>

      <div
        class="absolute bottom-6 left-6 text-white z-10 translate-y-2 group-hover:translate-y-0 transition-transform duration-500"
      >
        <p class="font-bold text-2xl">Geovanni González</p>
        <p class="text-sm text-orange-300 font-medium mt-1">
          {t("hero.title")}
        </p>
      </div>
    </div>

    <!-- 2. Bio Card (Wide) -->
    <div
      class="spotlight-card md:col-span-2 md:row-span-1 rounded-3xl p-8 sm:p-10 flex flex-col justify-center relative overflow-hidden group transition-all duration-500 hover:shadow-orange-500/10"
      data-aos="fade-left"
      data-aos-delay="300"
    >
      <!-- Background effects -->
      <div
        class="absolute top-0 right-0 w-80 h-80 bg-orange-500/5 rounded-full blur-[100px] -translate-y-1/2 translate-x-1/2 pointer-events-none group-hover:bg-orange-500/10 transition-colors duration-700"
      >
      </div>

      <div class="relative z-10">
        <h3 class="text-3xl font-bold text-text mb-6 flex items-center gap-3 tracking-tighter">
          <Icon
            name="mdi:account-circle"
            class="text-orange-500 w-10 h-10 group-hover:scale-110 transition-transform duration-500"
          />
          {t("about.title")}
        </h3>
        <p
          class="text-zinc-600 dark:text-zinc-400 leading-relaxed mb-6 text-base sm:text-lg font-light tracking-wide italic border-l-2 border-orange-500/30 pl-6"
        >
          {t("about.description-1")}
        </p>
        <p class="text-zinc-500 dark:text-zinc-500 leading-relaxed mb-8 text-sm sm:text-base">
          {t("about.description-2")}
        </p>

        <a
          href={lang === "es" ? cvFileSpanish : cvFileEnglish}
          download
          class="group/btn relative inline-flex items-center gap-3 px-8 py-3.5 rounded-2xl bg-orange-500/5 dark:bg-orange-500/10 border border-orange-500/20 hover:bg-orange-500 hover:text-white transition-all duration-500 overflow-hidden"
        >
          <div
            class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/10 to-white/0 -translate-x-full group-hover/btn:translate-x-full transition-transform duration-1000"
          >
          </div>
          <Icon
            name="mdi:file-download"
            class="w-6 h-6 group-hover/btn:scale-110 transition-transform relative z-10"
          />
          <span class="font-bold text-sm tracking-tight relative z-10">{t("about.cvDownload")}</span
          >
        </a>
      </div>
    </div>

    <!-- 3. Location Card -->
    <div
      class="spotlight-card md:col-span-1 rounded-3xl p-8 flex flex-col items-center justify-center gap-6 group transition-all duration-500 relative overflow-hidden"
      data-aos="fade-up"
      data-aos-delay="400"
    >
      <!-- Radar/Grid Overlay -->
      <div
        class="absolute inset-0 opacity-[0.03] dark:opacity-[0.07] pointer-events-none group-hover:scale-110 transition-transform duration-1000"
      >
        <div
          class="absolute inset-0"
          style="background-image: radial-gradient(circle at center, var(--color-accent) 1px, transparent 1px); background-size: 24px 24px;"
        >
        </div>
        <div
          class="absolute inset-0"
          style="background-image: linear-gradient(rgba(249, 115, 22, 0.1) 1px, transparent 1px), linear-gradient(90deg, rgba(249, 115, 22, 0.1) 1px, transparent 1px); background-size: 48px 48px;"
        >
        </div>
      </div>

      <div
        class="w-20 h-20 rounded-full bg-orange-500/10 flex items-center justify-center relative z-10 group-hover:bg-orange-500/20 transition-all duration-500 group-hover:shadow-[0_0_30px_rgba(249,115,22,0.2)]"
      >
        <div
          class="absolute inset-0 rounded-full border border-orange-500/30 animate-ping opacity-20"
        >
        </div>
        <Icon name="mdi:map-marker" class="w-10 h-10 text-orange-500" />
      </div>
      <div class="text-center relative z-10">
        <p class="text-xs uppercase tracking-[0.2em] font-black text-orange-500/60 mb-2">
          Location
        </p>
        <p class="text-text font-black text-2xl tracking-tighter">Costa Rica</p>
        <p class="text-muted text-xs font-medium mt-2 max-w-[150px] mx-auto leading-tight">
          Limón, ITCR (Centro Académico de Limón)
        </p>
      </div>
    </div>

    <!-- 4. Tech Stack Focus -->
    <div
      class="spotlight-card md:col-span-1 rounded-3xl p-8 flex flex-col justify-center group transition-all duration-500 relative overflow-hidden"
      data-aos="fade-up"
      data-aos-delay="500"
    >
      <div
        class="absolute -bottom-10 -right-10 w-32 h-32 bg-orange-500/5 rounded-full blur-3xl pointer-events-none"
      >
      </div>

      <p
        class="text-xs uppercase tracking-[0.2em] font-black text-orange-500/60 mb-6 flex items-center gap-2"
      >
        <Icon name="mdi:code-braces" class="text-orange-500 w-5 h-5" />
        Core Stack
      </p>
      <div class="flex flex-wrap gap-4 relative z-10">
        {
          techStack.map((tech) => (
            <div
              class="flex items-center gap-3 px-4 py-2.5 rounded-xl bg-text/5 border border-text/10 hover:bg-orange-500/10 hover:border-orange-500/30 transition-all duration-300 group/item hover:-translate-y-1"
              title={tech.name}
            >
              <Icon
                name={tech.icon}
                class="w-6 h-6 grayscale group-hover/item:grayscale-0 transition-all duration-500"
              />
              <span class="text-text text-sm font-bold tracking-tight">{tech.name}</span>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
