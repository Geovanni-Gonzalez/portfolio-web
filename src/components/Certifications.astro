---
const certifications = [
  {
    title: 'Certificación de Fundamentos de React',
    issuer: 'Meta (Coursera)',
    date: 'Marzo 2024',
    description: 'Curso completo que cubre los fundamentos de React, hooks, routing y gestión de estado.',
    link: 'https://coursera.org/certificado/react',
  },
  {
    title: 'Certificación en Redes de Computadoras',
    issuer: 'Cisco Networking Academy',
    date: 'Diciembre 2023',
    description: 'Certificación que valida conocimientos en redes, protocolos y seguridad informática.',
    link: 'https://www.cisco.com/certificaciones',
  },
];
---

<section id="certifications" class="mt-16 space-y-10">
  <h2 class="text-2xl font-semibold text-white mb-6 border-b border-indigo-600 pb-2">Certificaciones</h2>
  {certifications.map(({ title, issuer, date, description, link }) => (
    <article class="bg-zinc-900/70 p-6 rounded-lg shadow-lg text-white hover:shadow-indigo-500 transition-shadow duration-300">
      <header class="flex justify-between items-center">
        <h3 class="text-xl font-semibold">{title}</h3>
        <time class="text-sm text-zinc-400">{date}</time>
      </header>
      <p class="text-zinc-300 italic mt-1">{issuer}</p>
      <p class="mt-4 text-zinc-200 leading-relaxed">{description}</p>
      {link && 
        <a 
          href={link} 
          target="_blank" 
          rel="noopener noreferrer" 
          class="inline-block mt-4 text-cyan-400 hover:text-cyan-600 transition"
        >
          Ver certificado
        </a>
      }
    </article>
  ))}
</section>
