---
interface Props {
  title: string;
  className?: string;
  underlineClass?: string;
}

const {
  title,
  className = "text-4xl sm:text-5xl md:text-6xl mb-16",
  underlineClass = "w-[22rem] sm:w-[28rem]",
} = Astro.props;
---

<h2
  class:list={[
    "font-black text-center tracking-tight select-none relative flex flex-col items-center",
    className,
  ]}
>
  <span
    class="gradient-text drop-shadow-[0_2px_10px_rgba(0,0,0,0.1)] dark:drop-shadow-[0_0_30px_rgba(251,146,60,0.6)]"
  >
    {title}
  </span>
  <span
    class:list={[
      "block h-1.5 mt-5 rounded-full gradient-underline shadow-[0_2px_10px_rgba(249,115,22,0.3)] dark:shadow-[0_0_30px_rgba(251,146,60,0.6)]",
      underlineClass,
    ]}
    aria-hidden="true"></span>
</h2>

<style>
  .gradient-text {
    background-image: linear-gradient(
      to right,
      #431407,
      #9a3412,
      #78350f
    ); /* Orange-950 -> Orange-800 -> Amber-900 */
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
  }

  :global([data-theme="light"]) .gradient-text {
    background-image: linear-gradient(
      to right,
      #ffe5c8,
      #ffcf9c,
      #ffe5c8
    ) !important; /* Orange-800 -> Orange-700 (Warm Copper) */
  }

  :global([data-theme="dark"]) .gradient-text {
    background-image: linear-gradient(
      to right,
      #fdba74,
      #fcd34d,
      #fb923c
    ) !important; /* Orange-300 -> Amber-300 -> Orange-400 */
  }

  /* Underline Styles matching text */
  .gradient-underline {
    background-image: linear-gradient(to right, #431407, #9a3412, #78350f);
  }

  :global([data-theme="light"]) .gradient-underline {
    background-image: linear-gradient(to right, #ffe5c8, #ffcf9c, #ffe5c8) !important;
  }

  :global([data-theme="dark"]) .gradient-underline {
    background-image: linear-gradient(to right, #fdba74, #fcd34d, #fb923c) !important;
  }
</style>
