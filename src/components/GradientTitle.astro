---
interface Props {
  title: string;
  className?: string;
  underlineClass?: string;
}

const {
  title,
  className = "text-4xl sm:text-5xl md:text-6xl mb-16",
  underlineClass = "w-[22rem] sm:w-[28rem]",
} = Astro.props;
---

<h2
  class:list={[
    "font-black text-center tracking-tight select-none relative flex flex-col items-center",
    className,
  ]}
>
  <span
    class="bg-gradient-to-r from-orange-400 via-yellow-400 to-orange-600 dark:from-orange-300 dark:via-yellow-300 dark:to-orange-500 bg-clip-text text-transparent drop-shadow-lg"
    style="filter: drop-shadow(0 0 20px rgba(249, 115, 22, 0.3));"
  >
    {title}
  </span>
  <span
    class:list={[
      "block h-1.5 mt-5 rounded-full bg-gradient-to-r from-orange-500 via-yellow-400 to-orange-600 shadow-lg",
      underlineClass,
    ]}
    style="box-shadow: 0 0 20px rgba(249, 115, 22, 0.4);"
    aria-hidden="true"></span>
</h2>
