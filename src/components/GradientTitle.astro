---
interface Props {
  title: string;
  className?: string;
  underlineClass?: string;
}

const {
  title,
  className = "text-4xl sm:text-5xl md:text-6xl mb-16",
  underlineClass = "w-[22rem] sm:w-[28rem]",
} = Astro.props;
---

<h2
  class:list={[
    "font-black text-center tracking-tight select-none relative flex flex-col items-center",
    className,
  ]}
>
  <span
    class="bg-gradient-to-r from-orange-700 via-orange-600 to-amber-700 dark:from-orange-300 dark:via-amber-300 dark:to-orange-400 bg-clip-text text-transparent drop-shadow-[0_2px_10px_rgba(249,115,22,0.3)] dark:drop-shadow-[0_0_30px_rgba(251,146,60,0.6)]"
  >
    {title}
  </span>
  <span
    class:list={[
      "block h-1.5 mt-5 rounded-full bg-gradient-to-r from-orange-700 via-orange-600 to-amber-700 dark:from-orange-300 dark:via-amber-300 dark:to-orange-400 shadow-[0_2px_10px_rgba(249,115,22,0.3)] dark:shadow-[0_0_30px_rgba(251,146,60,0.6)]",
      underlineClass,
    ]}
    aria-hidden="true"></span>
</h2>
