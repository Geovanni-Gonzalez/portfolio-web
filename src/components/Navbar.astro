---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import LangPicker from './LangPicker.astro';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<nav class="bg-gray-900 px-4 py-3 flex items-center justify-between">
  <ul class="flex gap-6 text-white font-medium">
    <li><a href={`/${lang}/home/`}>{t('nav.home')}</a></li>
    <li><a href={`/${lang}/about/`}>{t('nav.about')}</a></li>
    <li><a href={`/${lang}/projects/`}>{t('nav.projects')}</a></li>
    <li><a href={`/${lang}/contact/`}>{t('nav.contact')}</a></li>
  </ul>
  <LangPicker />
</nav>
