---
import clsx from "clsx/lite";

type Props = {
    className?: string;
    size?: "default" | "large";
}

const { size = "default", className } = Astro.props;
---

<h1
    class={clsx(
        "text-white font-bold text-balance",
        size === "default" &&
            "text-xl sm:text-2xl md:text-3xl lg:text-4xl tracking-tight",
        size === "large" &&
            "text-5xl sm:text-7xl md:text-8xl lg:text-[120px] xl:text-[155px] tracking-tighter",
        className,
    )}
>
    <slot />
</h1>
