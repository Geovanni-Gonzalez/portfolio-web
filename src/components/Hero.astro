---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import H1 from "./H1.astro";
import SocialButtons from "./SocialButtons.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
  id="home"
  class="relative w-full min-h-screen flex flex-col items-center justify-between overflow-hidden pt-24 px-4 pb-4 sm:px-8 sm:pb-8 sm:pt-32"
>
  <div class="flex-grow flex flex-col justify-center max-w-2xl w-full z-10">
    <div data-aos="fade-up" data-aos-duration="1000">
      <H1
        size="large"
        className="text-3xl sm:text-5xl md:text-6xl font-extrabold tracking-tight leading-tight text-center sm:text-left"
      >
        {t("hero.name")}
        <br />
        <span class="text-orange-500 dark:text-orange-400"
          >{t("hero.lastname")}</span
        >
      </H1>
    </div>

    <section class="mt-6 sm:mt-8">
      <div data-aos="fade-up" data-aos-delay="200" data-aos-duration="1000">
        <H1
          size="default"
          className="text-lg sm:text-xl md:text-2xl font-light text-[var(--color-muted)] dark:text-zinc-300 text-center sm:text-left"
        >
          {t("hero.title")}
        </H1>
      </div>

      <div
        class="mt-8 flex flex-col sm:flex-row gap-4 items-center justify-center sm:justify-start"
        data-aos="fade-up"
        data-aos-delay="400"
        data-aos-duration="1000"
      >
        <a
          href="#contact"
          class="px-6 py-3 bg-orange-600 hover:bg-orange-500 text-white font-bold rounded-full transition-all duration-300 shadow-lg hover:shadow-orange-500/25 hover:scale-105 flex items-center gap-2"
        >
          <span>{t("nav.contact")}</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-arrow-right"
            ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
          >
        </a>
        <SocialButtons />
      </div>
    </section>
  </div>

  {
    /* Scroll Indicator - Always static, pushed to bottom by flex-between/grow */
  }
  <div
    class="z-10 animate-bounce cursor-pointer border-2 border-[var(--color-muted)] rounded-full p-1 opacity-70 hover:opacity-100 transition-opacity mt-8"
    onclick="document.getElementById('about').scrollIntoView({behavior: 'smooth'})"
    aria-label="Scroll down"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
      class="text-[var(--color-muted)]"
      ><path d="m7 13 5 5 5-5"></path><path d="M7 6 12 11 17 6"></path></svg
    >
  </div>
</div>
