---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import H1 from "./H1.astro";
import SocialButtons from "./SocialButtons.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div
  id="home"
  class="relative w-full min-h-screen flex flex-col items-center justify-between overflow-hidden pt-24 px-4 pb-4 sm:px-8 sm:pb-8 sm:pt-32"
>
  <div class="flex-grow flex flex-col justify-center max-w-6xl w-full z-10">
    <div data-aos="fade-up" data-aos-duration="1000" class="relative">
      <div
        class="absolute -top-20 -left-20 w-64 h-64 bg-orange-500/10 rounded-full blur-[100px] animate-pulse-glow pointer-events-none"
      >
      </div>
      <H1
        size="large"
        className="text-4xl sm:text-6xl md:text-7xl font-extrabold tracking-tighter leading-none text-center sm:text-left selection:text-white"
      >
        <span
          class="inline-block hover:scale-[1.02] transition-transform duration-500 cursor-default"
        >
          {t("hero.name")}
        </span>
        <br />
        <span
          class="text-orange-500 dark:text-orange-400 drop-shadow-[0_0_20px_rgba(249,115,22,0.3)] inline-block animate-float"
          >{t("hero.lastname")}</span
        >
      </H1>
    </div>

    <section class="mt-8 sm:mt-10">
      <div data-aos="fade-up" data-aos-delay="200" data-aos-duration="1000">
        <H1
          size="default"
          className="text-xl sm:text-2xl md:text-3xl font-light text-[var(--color-muted)] dark:text-zinc-400 text-center sm:text-left tracking-wide"
        >
          {t("hero.title")}
        </H1>
      </div>

      <div
        class="mt-10 flex flex-col sm:flex-row gap-6 items-center justify-center sm:justify-start"
        data-aos="fade-up"
        data-aos-delay="400"
        data-aos-duration="1000"
      >
        <a
          href="#contact"
          class="group relative px-8 py-4 bg-orange-600 text-white font-bold rounded-2xl transition-all duration-500 shadow-[0_0_20px_rgba(234,88,12,0.3)] hover:shadow-[0_0_30px_rgba(234,88,12,0.5)] hover:-translate-y-1 flex items-center gap-2 overflow-hidden"
        >
          <div
            class="absolute inset-0 bg-gradient-to-r from-white/0 via-white/20 to-white/0 -translate-x-full group-hover:translate-x-full transition-transform duration-1000"
          >
          </div>
          <span class="relative z-10">{t("nav.contact")}</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="20"
            height="20"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            class="lucide lucide-arrow-right relative z-10 group-hover:translate-x-1 transition-transform"
            ><path d="M5 12h14"></path><path d="m12 5 7 7-7 7"></path></svg
          >
        </a>
        <div class="scale-110">
          <SocialButtons />
        </div>
      </div>
    </section>
  </div>

  {/* Scroll Indicator - Always static, pushed to bottom by flex-between/grow */}
  <div
    class="z-10 group cursor-pointer flex flex-col items-center gap-2 opacity-50 hover:opacity-100 transition-all duration-500 mt-12"
    onclick="document.getElementById('about').scrollIntoView({behavior: 'smooth'})"
    aria-label="Scroll down"
  >
    <span
      class="text-[10px] uppercase tracking-[0.3em] font-bold text-[var(--color-muted)] group-hover:text-orange-500 transition-colors"
      >Explore</span
    >
    <div
      class="w-6 h-10 border-2 border-[var(--color-muted)] group-hover:border-orange-500 rounded-full flex justify-center p-1 transition-colors"
    >
      <div
        class="w-1 h-2 bg-[var(--color-muted)] group-hover:bg-orange-500 rounded-full animate-bounce"
      >
      </div>
    </div>
  </div>
</div>
