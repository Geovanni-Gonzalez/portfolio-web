---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import H1 from './H1.astro';
import SocialButtons from './SocialButtons.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<div id="home" class="p-4 sm:p-8 w-full min-h-screen flex flex-col justify-center items-center">
  <div class="mt-12 sm:mt-24 md:mt-32 max-w-2xl w-full">
    <H1 size="large" className="text-2xl sm:text-4xl md:text-5xl">{t('hero.name')} <br /> {t('hero.lastname')}</H1>
    <section class="mt-4 sm:mt-6">
      <H1 size="default" className="text-lg sm:text-xl md:text-2xl">{t('hero.title')}</H1>
      <div class="mt-4 flex flex-wrap gap-2">
        <SocialButtons />
      </div>
    </section>
  </div>
</div>