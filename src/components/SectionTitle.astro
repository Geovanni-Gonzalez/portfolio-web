---
// components/ui/SectionTitle.astro
import { Icon } from 'astro-iconify';

const {
  title,
  icon = null,
  color = 'orange-500',
  centered = false,
  underline = true,
} = Astro.props;

const baseColor = `text-${color}`;
const underlineColor = `bg-${color}`;
const alignment = centered ? 'text-center mx-auto justify-center' : 'text-left';
---

<div class={`w-fit mb-6 relative flex items-center gap-2 ${alignment}`}>
  {icon && <Icon name={icon} class={`w-6 h-6 ${baseColor}`} />}
  <h2 class={`text-3xl md:text-4xl font-extrabold tracking-wide ${baseColor}`}>
    {title}
  </h2>
  {underline && (
    <span class={`absolute left-0 -bottom-1 h-1 w-full ${underlineColor} rounded-lg animate-pulse opacity-60`} />
  )}
</div>
