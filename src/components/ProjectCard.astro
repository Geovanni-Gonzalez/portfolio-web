---
const { title, description, tech, repo, image } = Astro.props;
---

<div class="bg-zinc-800/60 backdrop-blur-sm rounded-xl shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden flex flex-col">
  <img 
    src={image} 
    alt={`Captura de ${title}`} 
    class="w-full h-48 object-cover object-top rounded-t-xl"
    loading="lazy"
  />

  <div class="p-6 flex flex-col flex-grow">
    <h3 class="text-xl font-semibold text-cyan-400">{title}</h3>
    <p class="mt-2 text-zinc-300 text-sm flex-grow">{description}</p>

    <div class="mt-4 flex flex-wrap gap-2 text-xs text-white/70">
      {tech.map((item: string) => (
        <>
          <span class="bg-cyan-600/20 border border-cyan-500/40 px-2 py-1 rounded">
            {item}
          </span>
        </>
      ))}
    </div>

    <div class="mt-6">
      <a 
        href={repo} 
        target="_blank" 
        rel="noopener noreferrer"
        class="inline-block bg-cyan-600 hover:bg-cyan-500 text-white text-sm font-medium py-2 px-4 rounded transition-all duration-300"
        aria-label={`Ver repositorio GitHub de ${title}`}
      >
        ðŸ”— Ver en GitHub
      </a>
    </div>
  </div>
</div>
