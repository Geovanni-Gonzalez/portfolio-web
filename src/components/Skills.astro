---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { Icon } from 'astro-iconify';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const languages = [
  
  { name: 'JavaScript', icon: 'logos:javascript', level: 'Avanzado' },
  { name: 'TypeScript', icon: 'logos:typescript-icon', level: 'Avanzado' },
  { name: 'C', icon: 'devicon:c', level: 'Intermedio' },
  { name: 'C++', icon: 'devicon:cplusplus', level: 'Intermedio' },
  { name: 'Haskell', icon: 'mdi:language-haskell', level: 'Intermedio' },
  { name: 'Python', icon: 'logos:python', level: 'Avanzado' }
];

const technologies = [
  { name: 'React', icon: 'logos:react', level: 'Avanzado' },
  { name: 'Node.js', icon: 'logos:nodejs-icon', level: 'Avanzado' },
  { name: 'MySQL', icon: 'logos:mysql', level: 'Intermedio' },
  { name: 'WebSockets', icon: 'mdi:lan-connect', level: 'Intermedio' },
  { name: 'Astro', icon: 'logos:astro-icon', level: 'Avanzado' }
];

const tools = [
  { name: 'Git', icon: 'logos:git-icon', level: 'Avanzado' },
  { name: 'VS Code', icon: 'vscode-icons:file-type-vscode', level: 'Avanzado' },
  { name: 'Figma', icon: 'logos:figma', level: 'Intermedio' },
  { name: 'JPL', icon: 'mdi:robot', level: 'Intermedio' },
  { name: 'Vite', icon: 'logos:vitejs', level: 'Avanzado' },
  { name: 'Agile', icon: 'mdi:account-group', level: 'Avanzado' }
];
---

<section id="skills" class="max-w-6xl mx-auto py-20 px-6 text-white scroll-mt-20">
  <h2 class="text-4xl font-bold text-center mb-12">{t('skills.title')}</h2>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
    <!-- Lenguajes -->
    <div class="bg-white/10 backdrop-blur-xl p-6 rounded-2xl shadow-lg border border-white/10 
                transition-transform duration-500 hover:scale-105 hover:shadow-orange-500/30">
      <h3 class="text-xl font-semibold mb-6 text-center">{t('skills.languages')}</h3>
      <ul class="grid grid-cols-2 gap-4">
        {languages.map(lang => (
          <li class="flex flex-col items-center bg-white/5 p-3 rounded-xl hover:bg-white/10 transition">
            <Icon name={lang.icon} class="w-10 h-10 mb-2" />
            <span class="text-sm">{lang.name}</span>
            <span class="text-xs text-white">{lang.level}</span>
          </li>
        ))}
      </ul>
    </div>

    <!-- TecnologÃ­as -->
    <div class="bg-white/10 backdrop-blur-xl p-6 rounded-2xl shadow-lg border border-white/10 
                transition-transform duration-500 hover:scale-105 hover:shadow-blue-500/30">
      <h3 class="text-xl font-semibold mb-6 text-center">{t('skills.technologies')}</h3>
      <ul class="grid grid-cols-2 gap-4">
        {technologies.map(tech => (
          <li class="flex flex-col items-center bg-white/5 p-3 rounded-xl hover:bg-white/10 transition">
            <Icon name={tech.icon} class="w-10 h-10 mb-2" />
            <span class="text-sm">{tech.name}</span>
            <span class="text-xs text-white">{tech.level}</span>
          </li>
        ))}
      </ul>
    </div>

    <!-- Herramientas -->
    <div class="bg-white/10 backdrop-blur-xl p-6 rounded-2xl shadow-lg border border-white/10 
                transition-transform duration-500 hover:scale-105 hover:shadow-green-500/30">
      <h3 class="text-xl font-semibold mb-6 text-center">{t('skills.tools')}</h3>
      <ul class="grid grid-cols-2 gap-4">
        {tools.map(tool => (
          <li class="flex flex-col items-center bg-white/5 p-3 rounded-xl hover:bg-white/10 transition">
            <Icon name={tool.icon} class="w-10 h-10 mb-2" />
            <span class="text-sm">{tool.name}</span>
            <span class="text-xs text-white">{tool.level}</span>
          </li>
        ))}
      </ul>
    </div>
  </div>
</section>
