---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import H1 from '../../components/H1.astro';
import WarpBackground from '../../components/WarpBackground';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout>
	<main>
		<div class="group relative w-full min-h-dvh flex items-center justify-center">
			<div class="absolute w-full h-screen -z-10">
            <WarpBackground
                colors={["#121212", "#6700ff", "#ae00ff"]} 
                speed={0.6}
                swirl={1.1}
                swirlIterations={14}
                shapeScale={0.33}
                client:load
                />
            </div>

            <div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
				<div>
					<H1 size="large"> Geovanni <br /> Gonz√°lez </H1>
				</div>
                

		</div>
	</main>
</BaseLayout>
