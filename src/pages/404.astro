---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
---

<BaseLayout title="404 - Not Found">
  <main class="flex flex-col items-center justify-center min-h-screen text-center px-4 relative z-10">
    <h1 class="text-9xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-orange-600 mb-4">404</h1>
    <p class="text-2xl text-zinc-300 mb-8">Page not found / PÃ¡gina no encontrada</p>
    <a href={`/${lang}/`} class="px-8 py-3 bg-gradient-to-r from-orange-600 to-orange-500 text-white font-semibold rounded-full hover:scale-105 transition-transform shadow-lg hover:shadow-orange-500/20">
      Go Home / Ir al Inicio
    </a>
  </main>
</BaseLayout>
