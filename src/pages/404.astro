---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<BaseLayout title="404: Not Found" description="Page not found">
  <div
    class="min-h-screen flex flex-col items-center justify-center text-center px-6"
  >
    <h1 class="text-9xl font-black text-orange-500 mb-4 animate-pulse">404</h1>
    <h2 class="text-3xl md:text-5xl font-bold text-[var(--color-text)] mb-8">
      {lang === "es" ? "Página no encontrada" : "Page Not Found"}
    </h2>
    <p class="text-xl text-muted max-w-lg mb-12">
      {
        lang === "es"
          ? "Lo sentimos, la página que buscas no existe o ha sido movida."
          : "Sorry, the page you are looking for does not exist or has been moved."
      }
    </p>
    <a
      href="/"
      class="px-8 py-4 bg-orange-500 text-white rounded-full font-bold hover:bg-orange-600 transition-all shadow-lg hover:shadow-orange-500/50"
    >
      {lang === "es" ? "Volver al inicio" : "Go back home"}
    </a>
  </div>
</BaseLayout>
